<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/fondotodo"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/botonRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/amarilloPrimario"
            android:tintMode="multiply"
            app:srcCompat="@android:drawable/ic_media_previous"
            app:tint="@color/azulPrimario" />

        <ImageButton
            android:id="@+id/botonPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/amarilloPrimario"
            android:tintMode="multiply"
            app:srcCompat="@android:drawable/ic_media_pause"
            app:tint="@color/azulPrimario" />

        <ImageButton
            android:id="@+id/botonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/amarilloPrimario"
            android:tintMode="multiply"
            app:srcCompat="@android:drawable/ic_media_play"
            app:tint="@color/azulPrimario" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Desde"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gap1"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" a Bilbao"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vengo por toda la orilla,"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Con mi"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gap2"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" remangada"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luciendo la pantorrilla,"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt6"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Vengo"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gap3"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="y corriendo"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porque me oprime el corsé"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt9"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Voy"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gap4"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="por las calles"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt11"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="¿Quién "
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gap5"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="!"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sardinas frescué"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt14"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Mis"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gap6"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt16"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Qué"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gap7"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="son"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Son de Santurce"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt19"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="Las traigo"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gap8"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/egiaztatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Egiaztatu" />

</LinearLayout>