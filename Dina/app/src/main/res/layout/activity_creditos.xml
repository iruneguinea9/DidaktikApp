<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:text="DINA Jokoa"
        android:textAlignment="center"
        android:textColor="@color/azulPrimario"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="170dp"
            android:layout_height="214dp"
            app:srcCompat="@drawable/dina" />

        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/garatzaileak"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:text="GARATZAILEAK\n\nAdrián Ferradás\nBrian Escobar\nIrune Guinea"
                android:textAlignment="center"
                android:textColor="@color/azulPrimario"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:text="SORMEN TALDEA\n\nPaula Montaña\nAinize Muguruza\nLeire Sierra\nAmaia Torre"
                android:textAlignment="center"
                android:textColor="@color/azulPrimario"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ehu_blanco_grande" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="225dp"
            android:layout_height="166dp"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="50sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cj" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30sp"
        android:background="@color/azulSecundario"
        android:text="©DINA\n2022"
        android:textAlignment="center" />

</LinearLayout>