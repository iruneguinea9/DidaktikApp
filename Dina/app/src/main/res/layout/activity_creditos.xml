<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondotodo2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dina_jolasa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dina_sin_fondo" />

            <LinearLayout
                android:layout_width="214dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/garatzaileak"
                    android:layout_width="170dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/cuadro_texto"
                    android:paddingTop="5dp"
                    android:text="GARATZAILEAK\n\nAdrián Ferradás\nBrian Escobar\nIrune Guinea"
                    android:textAlignment="center"
                    android:textColor="@color/grisbonito"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="170dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/cuadro_texto"
                    android:paddingTop="5dp"
                    android:text="SORMEN TALDEA\n\nPaula Montaña\nAinize Muguruza\nLeire Sierra\nAmaia Torre"
                    android:textAlignment="center"
                    android:textColor="@color/grisbonito"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ehu_blanco_grande" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="40sp"
                android:layout_marginTop="50sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cj" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/azulPrimario"
            android:text="©DINA\n2023"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>