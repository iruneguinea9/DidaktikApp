    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:layout_marginTop="100sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="170dp"
            android:layout_height="214dp"
            app:srcCompat="@drawable/dina" />

        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:text="GARATZAILEAK\n\nAdrián Ferradás\nBrian Escobar\nIrune Guinea"
                android:textAlignment="center"
                android:textColor="@color/azulPrimario"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:text="SORMEN TALDEA\n\nPaula Montaña\nAinize Muguruza\nLeire Sierra\nAmaia Torre"
                android:textAlignment="center"
                android:textColor="@color/azulPrimario"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ehu_blanco_grande" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="225dp"
            android:layout_height="166dp"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="120sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cj" />
    </LinearLayout>

</LinearLayout>