<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondotodo2"
    android:orientation="vertical"
    tools:context=".Actividad5">

    <GridView
        android:id="@+id/gv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="20sp"
        android:horizontalSpacing="10dp"

        android:numColumns="12"
        android:padding="0dp"
        android:verticalSpacing="10dp" />

    <TextView
        android:id="@+id/tvResultadoSopa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold" />

    <View
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:layout_marginVertical="5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="87dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/cuadro_texto"
            android:orientation="vertical">

            <TextView
                android:id="@+id/palabraSopa1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="SARDINA"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/palabraSopa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SAREA"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/palabraSopa3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ITSASMUSEO"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <!--            <TextView-->
            <!--                android:id="@+id/palabraSopa8"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="BIMECME"-->
            <!--                android:textSize="20sp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cuadro_texto"
            android:orientation="vertical">

            <TextView
                android:id="@+id/palabraSopa4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="ARRANTZALE"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/palabraSopa5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ENKANTE"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/palabraSopa6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KOFRADIA"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <!--            <TextView-->
            <!--                android:id="@+id/palabraSopa9"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="ASJOPKH"-->
            <!--                android:textSize="20sp" />-->

        </LinearLayout>

    </LinearLayout>


</LinearLayout>